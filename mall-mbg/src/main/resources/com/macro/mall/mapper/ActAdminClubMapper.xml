<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.mapper.ActAdminClubMapper">
  <resultMap id="BaseResultMap" type="com.macro.mall.model.ActAdminClub">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="club_id" jdbcType="BIGINT" property="clubId" />
  </resultMap>

  <sql id="Base_Column_List">
    id, user_id, club_id
  </sql>

  <insert id="insert" parameterType="com.macro.mall.model.ActAdminClub">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into act_admin_club (user_id, club_id)
    values (#{userId}, #{clubId})
    ON DUPLICATE KEY UPDATE user_id = #{userId}, club_id = #{clubId}
  </insert>

  <select id="getByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from act_admin_club
    where user_id = #{userId}
  </select>

    <select id="getByClubId" resultMap="BaseResultMap">
      select
      <include refid="Base_Column_List" />
      from act_admin_club
      where club_id = #{clubId}
    </select>

  <delete id="deleteByUserIdClubId" parameterType="java.lang.Long">
    delete from act_admin_club
    where user_id = #{userId}
    and club_id = #{clubId}
  </delete>

</mapper>